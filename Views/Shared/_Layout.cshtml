<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Официальный сайт компании "ЭлитСтрой"</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet">

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/scripts.js"></script>

</head>
<body>
    @{ Html.RenderPartial("_LoginBox"); }
    @{ Html.RenderPartial("_RequestBox"); }
    @{ Html.RenderPartial("_RemoveBox"); }
    @{ Html.RenderPartial("_Lightbox"); }
    <div class="container">
        @{ Html.RenderPartial("_Header"); }
        @{ Html.RenderPartial("_MainMenu"); }
        <main>
            @RenderBody()
        </main>
        @{ Html.RenderPartial("_Footer"); }
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
